<ivysettings>
  <settings defaultResolver="chain-example"/>
  <resolvers>
    <chain name="chain-example">
      <ibiblio name="ibiblio" m2compatible="true" checkconsistency="false"/>
      <!-- for MRUnit -->
      <ibiblio name="cloudera" m2compatible="true" root="https://repository.cloudera.com/content/groups/cdh-releases-rcs/"/>
      <!-- for memcached -->
      <ibiblio name="spy" m2compatible="true" root="http://bleu.west.spy.net/~dustin/m2repo/"/>
      <!-- for bliki -->
      <ibiblio name="bliki" m2compatible="true" root="http://gwtwiki.googlecode.com/svn/maven-repository/"/>
      <!-- for opennlp -->
      <ibiblio name="opennlp" m2compatible="true" root="http://opennlp.sourceforge.net/maven2/"/>
	  <!--for tuan4j -->
	  <ibiblio name="tuan4j" m2compatible="true" root="https://raw.github.com/antoine-tran/maven-repo/master/releases/"/>
	  
      <filesystem name="libraries">
        <artifact pattern="${basedir}/ivy/local-repo/[artifact]-[revision].[ext]" />
      </filesystem>

      <!-- for *publishing* artifacts for local testing builds -->
      <filesystem name="local-m2-publish-debian" m2compatible="true">
        <artifact pattern="${user.home}/Developer/maven-repo/[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"/>
      </filesystem>
      <filesystem name="local-m2-publish-mac" m2compatible="true">
        <artifact pattern="${user.home}/Apps/maven-repo/[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"/>
      </filesystem>

    </chain>
  </resolvers>
</ivysettings>
